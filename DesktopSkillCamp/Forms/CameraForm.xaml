<Window x:Class="DesktopSkillCamp.Forms.CameraForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopSkillCamp.Forms"
        mc:Ignorable="d"
        Title="Камера" Height="450" Width="800" MinWidth="500" MinHeight="450">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Номер не распознан"/>
            <StackPanel x:Name="photo">
                <TextBlock Text="Номер"/>
                <TextBox x:Name="number"/>
                <Image Width="200" Height="200" x:Name="img"/>
                <Button Content="Выбрать фото" Click="clSelectPhoto"/>
                <Button Content="Подтвердить" Click="clAccept"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
